{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
 
  
  },
  "include": [
    "cli/**/*.ts",
    "wsserver/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  
}
